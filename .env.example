# WhatsApp Scheduler Bot - Example .env file

# REST API Token (required for /send-now endpoint)
API_TOKEN=your_secret_token_here

# REST API Port (optional, default: 3000)
PORT=3000

# Timezone for scheduling (e.g., Asia/Kolkata, America/New_York)
DEFAULT_TIMEZONE=Asia/Kolkata

# How many minutes after scheduled time a message is still considered due
DUE_WINDOW_MINUTES=60

# Google Sheets configuration
GOOGLE_SHEET_ID=your_google_sheet_id_here 